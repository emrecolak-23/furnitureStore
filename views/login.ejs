<%- include('partials/_header')  %>

<%- include('partials/_navigation')  %>

<!-- contact section start -->
<div class="contact_section layout_padding">
  <div class="container">
     <div class="row">
        <div class="col-sm-12">
           <h1 class="contact_taital contact_heading">Login</h1>
        </div>
        <% if (flashMessages) { %>
         <div class="col-sm-12 text-center">
            <% if(flashMessages.success) { %>
               <div class="alert alert-success" role="alert">
                 <%= flashMessages.success  %> 
                </div>
            <% } else if (flashMessages.error) { %>
               <div class="alert alert-danger" role="alert">
                  <%= flashMessages.error  %> 
               </div>
            <% } %> 
         </div>
         <% } %> 
     </div>
     <div class="contact_section_2">
        <div class="row">
           <div class="col-md-12">
              <div class="mail_section map_form_container">
                 <form method="post" action="/user/login">
                    <input type="text" class="mail_text" placeholder="Email" name="email">
                    <input type="password" class="mail_text mb-4" placeholder="Password" name="password">
                    <div class="btn_main">
                      <button type="submit" value="LOGIN" id="submit" class="btn btn-warning btn-radius btn-brd btn-block text-white">LOGIN</button>
                    </div>
                 </form>
              </div>
           </div>
        </div>
     </div>
  </div>
</div>
<!-- contact section end -->

<%- include('partials/_footer') %> 